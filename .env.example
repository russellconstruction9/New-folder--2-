# Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# ==================== API KEYS ====================
# Google Maps API Key (get from Google Cloud Console)
# Required for map functionality and location services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Gemini AI API Key (get from Google AI Studio)  
# Required for AI chat agent functionality
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ==================== BACKEND CONFIGURATION ====================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000/api
VITE_BACKEND_URL=http://localhost:8000

# ==================== FILE UPLOAD SETTINGS ====================
# Maximum file size in bytes (10MB default)
VITE_MAX_FILE_SIZE=10485760
# Allowed file types for uploads
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ==================== DEVELOPMENT SETTINGS ====================
VITE_ENVIRONMENT=development
VITE_DEBUG=true

# ==================== BACKEND ONLY VARIABLES ====================
# (These are used by your backend server, not the frontend)

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/constructtrack_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=constructtrack_dev
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=constructtrack-dev-files

# Logging
LOG_LEVEL=debug