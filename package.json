{
  "name": "constructtrack-pro",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://constructtrack-pro.web.app",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && npx vite-bundle-analyzer dist/assets/*.js",
    "preview": "vite preview",
    "preview:dist": "vite preview --host 0.0.0.0",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "npm run type-check",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:deploy:hosting": "npm run build && firebase deploy --only hosting",
    "firebase:init": "firebase init"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "date-fns": "^4.1.0",
    "react-router-dom": "^7.9.4",
    "@google/genai": "^1.25.0",
    "firebase": "^10.7.1",
    "react-firebase-hooks": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "firebase-tools": "^13.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
